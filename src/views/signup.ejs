<html>
<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
<div id="vueApp">
    <div class="hero">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-3 pl-5 pt-5">
                    <div class="bg-light">
                        <div class="bg-transparent">
                            <h3 class="text-muted p-2 d-inline"><%= title %> or </h3>
                            <a class="btn btn-danger" href="/auth/signIn"> Sign In </a>
                        </div>
                        <form class="p-4" action="/auth/signUp" method="post">
                            <div class="form-group">
                                <label v-on:click="showPopUp()" for="username"> Username: </label>
                                <input class="form-control" name="username" id="username">
                            </div>

                            <div class="form-group">
                                <label for="password"> Password: </label>
                                <input class="form-control" type="password" name="password" id="password">
                            </div>

                            <div class="form-group">
                                <label for="email"> Email: </label>
                                <input class="form-control" type="email" name="email" id="email">
                                <small class="form-text text-muted">Supported domain @gmail.com, @hotmail.com</small>
                            </div>

                            <div class="my-5">
                                <button class="btn btn-primary" type="submit">Sign Up</button>
                                <button class="btn btn-secondary" type="reset">Reset</button>
                            </div>

                        </form>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/jquery.slim.min.js"></script>
<script src="/js/popper.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/vue.js"></script>
<script src="/js/signUp.js"></script>

</body>
</html>
